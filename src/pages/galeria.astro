---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import NavOption from "../components/NavOption.astro";
import Footer from "../components/Footer.astro";

import Galery from "../components/Galery.astro";
import GaleryImg from "../components/GaleryImg.astro";
const imagenes = await Astro.glob("./images/*.md");
---

<Layout>
  <Navbar
    imagen={"https://scontent.fmid1-3.fna.fbcdn.net/v/t39.30808-6/350975952_514236867474399_3146924486109421848_n.jpg?_nc_cat=103&ccb=1-7&_nc_sid=5f2048&_nc_eui2=AeFi34o-gocXgFSLl6nWts7HKcCXB6pDowUpwJcHqkOjBTY3PY_GgStCShzt2_SLQsPt0b34_wP9Agioj0-2XfLj&_nc_ohc=0lCe9bQHQWIAX9-mE6m&_nc_ht=scontent.fmid1-3.fna&oh=00_AfDHHwzLPnoAiEBgFguo6oQom62zuFR8c_QFYCnoJfhv8A&oe=6557D9E8"}
    link={"https://www.facebook.com/profile.php?id=100092898635950"}
    nombre={"página oficial de conoce el sur de Veracruz"}
  >
    <NavOption link={"/"} nombre={"Inicio"} />
    <NavOption link={"/galeria"} nombre={"Galeria"} />
  </Navbar>
    <Galery>
      {imagenes.map((x) => <GaleryImg link={x.frontmatter.link} />)}
    </Galery>
  <Footer
    link={"https://www.facebook.com/profile.php?id=100092898635950"}
    nombre={"página oficial de conoce el sur de Veracruz"}
  />
</Layout>
