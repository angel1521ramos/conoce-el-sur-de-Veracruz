---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import NavOption from "../components/NavOption.astro";
import Footer from "../components/Footer.astro";
import Menu from "../components/blog/Menu.astro";
import Title from "../components/blog/Title.astro";
import Posts from "../components/blog/Posts.astro";
import Card from "../components/blog/Card.astro";
import Carrusel from "../components/Carrusel.astro"
import CarruselImg from "../components/CarruselImg.astro"

const imagen =
"https://scontent.fmid1-3.fna.fbcdn.net/v/t39.30808-6/350975952_514236867474399_3146924486109421848_n.jpg?_nc_cat=103&ccb=1-7&_nc_sid=5f2048&_nc_eui2=AeFi34o-gocXgFSLl6nWts7HKcCXB6pDowUpwJcHqkOjBTY3PY_GgStCShzt2_SLQsPt0b34_wP9Agioj0-2XfLj&_nc_ohc=0lCe9bQHQWIAX9-mE6m&_nc_ht=scontent.fmid1-3.fna&oh=00_AfDHHwzLPnoAiEBgFguo6oQom62zuFR8c_QFYCnoJfhv8A&oe=6557D9E8",
link = "https://www.facebook.com/profile.php?id=100092898635950",
nombre = "p√°gina oficial de conoce el sur de Veracruz";
const articulos = await Astro.glob("./posts/*.md");
const imagenes = await Astro.glob("./images/*.md");
---

<Layout>
  <Navbar imagen={imagen} link={link} nombre={nombre}>
    <NavOption link={"/"} nombre={"Inicio"} />
    <NavOption link={"/galeria"} nombre={"Galeria"} />
  </Navbar>
  <Menu>
    <Title>
      <Carrusel>
        {imagenes.map((x)=>
        <CarruselImg link={x.frontmatter.link} />)}
      </Carrusel>
    </Title>
    <Posts>
      {articulos.map((x) =>
      <Card etiqueta={x.frontmatter.etiqueta} titulo={x.frontmatter.titulo} descripcion={x.frontmatter.descripcion}
        link={x.frontmatter.redireccion} />)}
    </Posts>
  </Menu>

  <Footer link={link} nombre={nombre} />
</Layout>